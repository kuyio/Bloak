 <header>
  <div class="px-3 py-2 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="<%= admin_posts_path %>" class="d-flex align-items-center my-2 my-lg-0 me-lg-auto text-white text-decoration-none">
          <span class="d-inline-block"><img src="<%= asset_path('logo.png') %>" alt="Site logo" class="site-logo"></span>
          <span class="d-inline-block ms-2 fs-5"><%= Bloak.site_name %> Admin</span>
        </a>

        <ul class="nav col-12 col-lg-auto my-2 justify-content-center my-md-0 text-small">
          <li class="mx-2">
            <a class="nav-link text-muted <%= 'active' if controller.controller_name == 'posts'%>" href="<%= admin_posts_path %>">
              <div class="bi d-block mx-auto mb-0 text-center fs-5" width="24" height="24"><i class="far fa-file"></i></div>
              Posts
            </a>
          </li>
          <li class="mx-2">
            <a class="nav-link text-muted <%= 'active' if controller.controller_name == 'images'%>" href="<%= admin_images_path %>">
              <div class="bi d-block mx-auto mb-0 text-center fs-5" width="24" height="24"><i class="far fa-image"></i></div>
              Images
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>