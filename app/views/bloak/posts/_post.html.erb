
<div class="post p-1 p-md-5 bg-white rounded-3">

  <nav class="breadcrumb" aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="<%= root_path %>">Blog</a></li>
      <li class="breadcrumb-item"><a href="<%= topic_path(@post.topic) %>"><%= @post.topic %></a></li>
      <li class="breadcrumb-item active" aria-current="page"><%= @post.title.truncate_words(3) %></li>
    </ol>
  </nav>


  <h1 class="fs-xl fw-bold mt-3 mb-2"><%= @post.title %></h1>

  <p class="fs-7 text-muted mb-0">
    by <%= @post.author_name %>
     •
    <a href="<%= topic_path(@post.topic) %>"><%= @post.topic %></a>
  </p>

  <p class="fs-7 text-muted mb-5">
    <%= short_date @post.created_at %>
    <span class="text-warning">•</span>
    <%= (@post.reading_time.seconds / 60.0).ceil %> minute read
  </p>

  <img src="<%= @post.cover_image_path %>" class="img-fluid" alt="">

  <div class="post-content mt-5">
    <%= @post.render(post: @post, request: request) %>
  </div>
</div>
